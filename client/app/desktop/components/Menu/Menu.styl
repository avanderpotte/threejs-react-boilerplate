@import './../../../../style/base/baseDir.styl'

.pageSlider-appear
  transform: translate3d(100%, 0, 0)

.pageSlider-appear.pageSlider-appear-active
  transform: translate3d(0, 0, 0)
  transition: all 3000ms

.navigation
  height 10%
  background-color darken( $WHITE, 3 )

  &__list
    height 100%
    display flex
    flex-flow row nowrap
    justify-content center
    align-items center

  &__item
    padding 0 1rem
    text-decoration none
    font-size 0.8rem
    color $BLACK
